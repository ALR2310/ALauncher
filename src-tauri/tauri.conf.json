{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "alauncher",
  "version": "0.1.0",
  "identifier": "com.alr.alauncher",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "externalBin": ["binaries/server"],
    "active": true,
    "targets": "nsis",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": ["https://github.com/ALR2310/ALauncher/releases/latest/download/latest.json"],
      "dialog": true,
      "windows": {
        "installMode": "passive"
      },
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDM2MDg5RDU5RDU0NUMyRjkKUldUNXdrWFZXWjBJTnNuZHJoYWNKV3BEU0NDTHJyOS9QK3hhb0ZVL2JsNXUwZHV6dTlIRlZwUXoK"
    }
  }
}
